pipeline {
    agent any
    environment{
                GIT_COMMITTER_NAME = sh(script: "git --no-pager show -s --format='%an'",returnStdout: true).trim()
    }

    stages {
        stage('Hello') {
            steps { 
                sh ' env | sort'
                sh 'echo "next line will fail the pipeline # ${GIT_COMMITTER_NAME}"'
                sh 'unkown-command'
            }
        }
    }
    
     post {
        failure {
            emailext (body: '''Hi,

$PROJECT_NAME - Build # $BUILD_NUMBER - COMMITER # $GIT_COMMITTER_NAME - $BUILD_STATUS:

Check console output at $BUILD_URL to view the results.

Please use "Dev-team" as username/password on Jenkins !

Note - Please do not reply to this email.

Thanks,
DevOps Team.''', subject: '$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS!', to: 'driss@abxrstudio.com')
          
        }
    }
}


